
import sqlite3
import tkinter as tk
from tkinter import ttk

def save_data():
    username = username_entry.get()
    email = email_entry.get()
    password = password_entry.get()
    sex = sex_var.get()  
    ethnicity = ethnicity_entry.get()
    question1 = question1_entry.get()
    question2 = question2_entry.get()
    question3 = question3_entry.get()

    conn = sqlite3.connect("userdatabase.db")
    cursor = conn.cursor()
    cursor.execute('''
        CREATE TABLE IF NOT EXISTS usersDataBase (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            username TEXT NOT NULL,
            password TEXT NOT NULL,
            email TEXT NOT NULL,
            sex TEXT,
            ethnicity TEXT,
            question1 TEXT,
            question2 TEXT,
            question3 TEXT
        )
    ''')
    cursor.execute("INSERT INTO usersDataBase (username, email, password, sex, ethnicity, question1, question2, question3) VALUES (?, ?, ?, ?, ?, ?, ?, ?)",
                   (username, email, password, sex, ethnicity, question1, question2, question3))
    conn.commit()
    conn.close()
    print("User data has been saved to the database.")

app = tk.Tk()
app.title("BrainBit")

sex_options = ["Male", "Female", "Other"]  
sex_var = tk.StringVar(value=sex_options[0])  



username_label = ttk.Label(app, text="Name:")
username_entry = ttk.Entry(app)
email_label = ttk.Label(app, text="Email:")
email_entry = ttk.Entry(app)
password_label = ttk.Label(app, text="Password:")
password_entry = ttk.Entry(app, show="*")  
sex_label = ttk.Label(app, text="Sex:")
sex_option_menu = ttk.OptionMenu(app, sex_var, sex_options[0], *sex_options)  
ethnicity_label = ttk.Label(app, text="Ethnicity:")
ethnicity_entry = ttk.Entry(app)
question1_label = ttk.Label(app, text="What are you looking for?:")
question1_entry = ttk.Entry(app)
question2_label = ttk.Label(app, text="What are your hobbies:")
question2_entry = ttk.Entry(app)
question3_label = ttk.Label(app, text="What's your highest level of education?")
question3_entry = ttk.Entry(app)

save_button = ttk.Button(app, text="Save", command=save_data)

username_label.grid(row=0, column=0)
username_entry.grid(row=0, column=1)
email_label.grid(row=1, column=0)
email_entry.grid(row=1, column=1)
password_label.grid(row=2, column=0)
password_entry.grid(row=2, column=1)
sex_label.grid(row=3, column=0)
sex_option_menu.grid(row=3, column=1)  
ethnicity_label.grid(row=4, column=0)
ethnicity_entry.grid(row=4, column=1)
question1_label.grid(row=5, column=0)
question1_entry.grid(row=5, column=1)
question2_label.grid(row=6, column=0)
question2_entry.grid(row=6, column=1)
question3_label.grid(row=7, column=0)
question3_entry.grid(row=7, column=1)
save_button.grid(row=8, column=1)

app.mainloop()

conn = sqlite3.connect("userdatabase.db")
cursor = conn.cursor()



cursor.execute("SELECT * FROM usersDataBase")
rows = cursor.fetchall()

for row in rows:
    print(row)

conn.close()
